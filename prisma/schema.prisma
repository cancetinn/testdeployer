generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(USER) // FOUNDER, ADMIN, STAFF, USER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Teams & Collaboration
  teams           TeamMember[]
  collaborations  BotCollaborator[]
  sentInvitations TeamInvitation[] @relation("TeamInviter")
  notifications   Notification[]
  
  // GitHub Integration
  accounts        Account[]
  
  // Restored Relations
  bots            Bot[]
  
  // Support System
  tickets         Ticket[]        @relation("TicketAuthor")
  assignedTickets Ticket[]        @relation("TicketAssignee")
  ticketMessages  TicketMessage[]
  
  // Community
  publishedBots   PublishedBot[]
  botReviews      BotReview[]
  botStars        BotStar[]
}

enum Role {
  FOUNDER
  ADMIN
  STAFF
  USER
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum BotRole {
  OWNER
  EDITOR
  VIEWER
}

model Team {
  id          String       @id @default(cuid())
  name        String
  slug        String       @unique
  avatarUrl   String?
  
  members     TeamMember[]
  invitations TeamInvitation[]
  bots        Bot[]
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  role      TeamRole @default(MEMBER)
  
  createdAt DateTime @default(now())
  
  @@unique([teamId, userId])
}

model TeamInvitation {
  id        String   @id @default(cuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  email     String
  inviterId String
  inviter   User     @relation("TeamInviter", fields: [inviterId], references: [id])
  
  role      TeamRole @default(MEMBER)
  status    String   @default("PENDING") // PENDING, ACCEPTED, DECLINED
  
  createdAt DateTime @default(now())
  expiresAt DateTime
  
  @@unique([teamId, email])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type      String   // TEAM_INVITE, SYSTEM, BOT_ALERT
  title     String
  message   String
  data      String?  // JSON string
  read      Boolean  @default(false)
  
  createdAt DateTime @default(now())
}

model BotCollaborator {
  id        String   @id @default(cuid())
  botId     String
  bot       Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  role      BotRole  @default(EDITOR)
  
  createdAt DateTime @default(now())
  
  @@unique([botId, userId])
}

model Bot {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  // Ownership: Either User (Personal) or Team
  ownerId     String?
  owner       User?    @relation(fields: [ownerId], references: [id])
  
  teamId      String?
  team        Team?    @relation(fields: [teamId], references: [id])
  
  collaborators BotCollaborator[]
  
  status      String   @default("offline") // online, offline, starting, error
  pid         Int?     // Process ID if running
  port        Int?     // Port if applicable
  
  // GitHub Integration
  githubRepo      String? // "username/repo"
  githubBranch    String? @default("main")
  githubWebhookId String?
  autoDeploy      Boolean @default(false)
  
  // Resources (Last known)
  cpuUsage    Float    @default(0)
  ramUsage    Float    @default(0)
  
  deployments Deployment[]
  envVars     EnvironmentVariable[]
  logs        BotLog[]
  
  // Community
  publishedVersions PublishedBot[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Deployment {
  id        String   @id @default(cuid())
  botId     String
  bot       Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  status    String   @default("queued") // queued, building, completed, failed
  logPath   String?  // Path to log file
  
  trigger   String   @default("manual") // manual, github_push, schedule
  commitHash String? // If github trigger
  
  startedAt DateTime @default(now())
  finishedAt DateTime?
}

model EnvironmentVariable {
  id        String   @id @default(cuid())
  key       String
  value     String
  botId     String
  bot       Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([botId, key])
}

model Ticket {
  id          String   @id @default(cuid())
  subject     String
  category    String   // 'technical', 'billing', 'other'
  status      String   @default("OPEN") // OPEN, ANSWERED, CLOSED, RESOLVED
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  
  authorId    String
  author      User     @relation("TicketAuthor", fields: [authorId], references: [id])
  
  assignedToId String?
  assignedTo   User?   @relation("TicketAssignee", fields: [assignedToId], references: [id])
  
  messages    TicketMessage[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TicketMessage {
  id        String   @id @default(cuid())
  content   String
  
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])
  
  createdAt DateTime @default(now())
}

model BotLog {
  id        String   @id @default(cuid())
  botId     String
  bot       Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  content   String
  type      String   @default("info") // info, error, stdout, stderr
  createdAt DateTime @default(now())
  
  @@index([botId, createdAt])
}

// ============================================
// Community Bot Marketplace
// ============================================

model PublishedBot {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique  // URL-friendly name
  description String
  readme      String?  // Markdown README
  
  // Source bot reference
  sourceBotId String
  sourceBot   Bot      @relation(fields: [sourceBotId], references: [id])
  
  // Author info (User only for now to simplify)
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  
  // Metadata
  category    String   // utility, moderation, music, fun, economy
  tags        String   // comma-separated: "moderation,automod,security"
  version     String   @default("1.0.0")
  
  // Stats
  downloads   Int      @default(0)
  stars       Int      @default(0)
  
  // Status
  status      String   @default("approved") // pending, approved, rejected
  isPublic    Boolean  @default(true)
  
  // Safe snapshot of bot files
  filesSnapshot String  // Path to sanitized zip file
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  reviews     BotReview[]
  starredBy   BotStar[]
  
  @@index([category])
  @@index([status, isPublic])
}

model BotReview {
  id        String   @id @default(cuid())
  content   String
  rating    Int      // 1-5
  
  botId     String
  bot       PublishedBot @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  
  createdAt DateTime @default(now())
  
  @@unique([botId, authorId])  // One review per user per bot
}

model BotStar {
  id        String   @id @default(cuid())
  
  botId     String
  bot       PublishedBot @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
  
  @@unique([botId, userId])  // One star per user per bot
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  refresh_token_expires_in Int?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

